<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Chatbuddy" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_green</item>
        <item name="colorPrimaryVariant">@color/main_black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="windowNoTitle">true</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_green</item>
        <item name="colorSecondaryVariant">@color/main_green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/main_black</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorButtonNormal">@color/main_green</item>
    </style>
</resources>