<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SolutionActivity"
    android:id="@+id/SolutionActivity">



    <RelativeLayout
        android:id="@+id/SolutionLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollSolution">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:padding="20dp">



                <TextView
                    android:id="@+id/welcome_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="당신의 응어리를 보듬어주세요"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="30dp"/>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/MindMapLayout" >

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/task1"
                        android:layout_width="160dp"
                        android:layout_height="160dp"

                        android:background="@drawable/circle"
                        android:text="과제"
                        android:textSize="40sp"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/task2"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="20dp"

                        android:background="@drawable/circle"
                        android:backgroundTint="@color/main_orange"
                        android:text="취업"
                        android:textSize="30sp"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/task1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/task7"
                        tools:ignore="MissingConstraints" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/task3"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="20dp"


                        android:background="@drawable/circle"
                        android:backgroundTint="@color/text_lightGray"
                        android:text="친구"
                        android:textColor="@color/black"
                        android:textSize="40sp"

                        app:layout_constraintTop_toBottomOf="@+id/task1"
                        app:layout_constraintRight_toRightOf="parent"
                        tools:ignore="MissingConstraints" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/task4"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="20dp"

                        android:background="@drawable/circle"
                        android:backgroundTint="@color/main_orange"
                        android:text="돈"
                        android:textSize="20sp"

                        app:layout_constraintLeft_toRightOf="@+id/task1"
                        app:layout_constraintBottom_toTopOf="@+id/task3"
                        tools:ignore="MissingConstraints" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/task5"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginLeft="50dp"

                        android:background="@drawable/circle"
                        android:backgroundTint="@color/main_orange"
                        android:text="취업"
                        android:textSize="20sp"

                        app:layout_constraintLeft_toRightOf="@+id/task6"
                        app:layout_constraintTop_toBottomOf="@+id/task1"
                        app:layout_constraintRight_toLeftOf="@+id/task3"
                        tools:ignore="MissingConstraints" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/task6"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"

                        android:background="@drawable/circle"
                        android:backgroundTint="@color/main_green"
                        android:text="건강"
                        android:textSize="20sp"

                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/task10"
                        tools:ignore="MissingConstraints" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/task7"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginRight="20dp"

                        android:background="@drawable/circle"
                        android:backgroundTint="@color/text_lightGray"
                        android:text="건강"
                        android:textSize="20sp"
                        android:textColor="@color/black"

                        app:layout_constraintBottom_toTopOf="@+id/task9"
                        app:layout_constraintRight_toRightOf="parent"
                        tools:ignore="MissingConstraints" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/task8"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"


                        android:background="@drawable/circle"
                        android:backgroundTint="@color/text_lightGray"
                        android:text="친구"
                        android:textColor="@color/black"
                        android:textSize="20sp"

                        app:layout_constraintTop_toBottomOf="@+id/task2"
                        app:layout_constraintRight_toLeftOf="@+id/task1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        tools:ignore="MissingConstraints" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/task9"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginBottom="50dp"

                        android:background="@drawable/circle"
                        android:backgroundTint="@color/main_lightGray"
                        android:text="취업"
                        android:textSize="30sp"

                        app:layout_constraintBottom_toTopOf="@+id/task4"
                        app:layout_constraintRight_toRightOf="parent"
                        tools:ignore="MissingConstraints" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/task10"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="80dp"
                        android:layout_marginLeft="0dp"

                        android:background="@drawable/circle"
                        android:backgroundTint="@color/main_lightGray"
                        android:text="취업"
                        android:textSize="30sp"

                        app:layout_constraintTop_toBottomOf="@+id/task8"
                        app:layout_constraintLeft_toLeftOf="parent"
                        tools:ignore="MissingConstraints" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <LinearLayout
                    android:id="@+id/todoLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_marginBottom="160dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="30dp"
                        android:text="하루 3가지 투두리스트"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/icon_solution_circle"
                            android:layout_gravity="center"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>

                        <LinearLayout
                            android:id="@+id/todo1"
                            android:layout_width="270dp"
                            android:layout_height="130dp"
                            android:background="@drawable/round_button_stroke"
                            android:orientation="vertical"
                            android:padding="20dp"
                            android:layout_gravity="right">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="가벼운 산책가기"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="▶   10m"
                                android:textColor="#D9D9D9"
                                android:textSize="10sp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="70dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/icon_solution_lock1"
                            android:layout_gravity="center"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>

                        <LinearLayout
                            android:layout_width="270dp"
                            android:layout_height="130dp"
                            android:background="@drawable/round_button"
                            android:orientation="vertical"
                            android:padding="20dp"
                            android:layout_gravity="right"
                            android:backgroundTint="#50313030">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="하늘사진 찍어보기"
                                android:textColor="#50ffffff"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="▶   1m"
                                android:textColor="#50D9D9D9"
                                android:textSize="10sp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/icon_solution_lock2"
                            android:layout_gravity="center"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>

                        <LinearLayout
                            android:layout_width="270dp"
                            android:layout_height="70dp"
                            android:background="@drawable/round_button"
                            android:backgroundTint="#50313030"
                            android:orientation="vertical"
                            android:padding="20dp"
                            android:layout_gravity="right">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="청년마음건강챙김 알아보기"
                                android:textColor="#50ffffff"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/sol_Top"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="left"
            tools:ignore="MissingConstraints">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/btnMenu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/icon_menu" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btnChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="90dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/transparent"

            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            app:srcCompat="@drawable/icon_chat" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>